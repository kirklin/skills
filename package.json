{
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.29.2",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "start": "node scripts/cli.ts",
    "prepare": "simple-git-hooks && git submodule update --init --recursive"
  },
  "devDependencies": {
    "@clack/prompts": "^1.0.0",
    "@kirklin/eslint-config": "^7.0.0",
    "@types/node": "^25.2.2",
    "eslint": "^10.0.0",
    "lint-staged": "^16.2.7",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.3"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,mjs,mts}": "eslint --fix"
  }
}
